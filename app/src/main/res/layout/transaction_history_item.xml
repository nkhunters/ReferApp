<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/bonus_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lucky Spin Bonus"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bonus_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-09-19 23:27:42"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/uc_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/wallet_button_bg"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="0.05 UC"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/graycolor"
        android:layout_below="@id/uc_btn"/>
</RelativeLayout>